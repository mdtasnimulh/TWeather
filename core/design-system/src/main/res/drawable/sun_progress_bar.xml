<?xml version="1.0" encoding="UTF-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@android:id/background">
        <shape>
            <padding
                android:bottom="@dimen/_2sdp"
                android:top="@dimen/_2sdp"
                android:left="@dimen/_2sdp"
                android:right="@dimen/_2sdp"/>
            <corners
                android:radius="@dimen/_3sdp" />
            <gradient
                android:startColor="@color/yellow_light_400"
                android:centerColor="@color/yellow_light_700"
                android:centerY="0.50"
                android:endColor="@color/yellow_light_900"
                android:angle="270" />
        </shape>
    </item>
    <item
        android:id="@android:id/progress">
        <clip>
            <shape>
                <corners
                    android:radius="@dimen/_3sdp" />
                <gradient
                    android:startColor="@color/yellow_light_1000"
                    android:endColor="@color/primary_orange_dark_100"
                    android:angle="0" />
            </shape>
        </clip>
    </item>
</layer-list>