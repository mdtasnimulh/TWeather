<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_4"
    app:strokeWidth="0.5dp"
    app:cardElevation="@dimen/_3sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dailyCardCl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_1sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dailyHeaderCl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.tasnimulhasan.designsystem.CustomMediumTV
                android:id="@+id/dayTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_8"
                android:paddingHorizontal="@dimen/padding_8"
                android:gravity="start"
                android:includeFontPadding="false"
                android:textColor="@color/subTextColor"
                android:textSize="@dimen/regular_text_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/dailyIconIv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Friday" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/dailyIconIv"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginVertical="@dimen/margin_10"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/ic_clear_sky_day" />

            <com.tasnimulhasan.designsystem.CustomBoldTv
                android:id="@+id/dailyMinTv"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/margin_8"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingHorizontal="@dimen/padding_4"
                android:textColor="@color/green_light_900"
                android:textSize="@dimen/small_text_size"
                app:layout_constraintBottom_toTopOf="@+id/dailyMaxTv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/dailyIconIv"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Min: 25.0째" />

            <com.tasnimulhasan.designsystem.CustomBoldTv
                android:id="@+id/dailyMaxTv"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingHorizontal="@dimen/padding_4"
                android:textColor="@color/primary_orange_light_900"
                android:textSize="@dimen/small_text_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/dailyMinTv"
                app:layout_constraintStart_toStartOf="@+id/dailyMinTv"
                app:layout_constraintTop_toBottomOf="@id/dailyMinTv"
                tools:text="Max: 35.0째" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/dividerView1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_2sdp"
                android:layout_marginHorizontal="@dimen/margin_2"
                android:background="@drawable/divider_dash_line"
                android:layerType="software"
                app:layout_constraintEnd_toEndOf="@+id/dailyMinTv"
                app:layout_constraintStart_toStartOf="@+id/dailyMinTv"
                app:layout_constraintTop_toBottomOf="@+id/dailyMinTv" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/dividerView2"
                android:layout_width="@dimen/_1sdp"
                android:layout_height="0dp"
                android:layout_marginVertical="@dimen/_1sdp"
                android:background="@drawable/divider_dash_line_vertical"
                android:layerType="software"
                app:layout_constraintTop_toTopOf="@+id/dailyMinTv"
                app:layout_constraintStart_toStartOf="@+id/dailyMinTv"
                app:layout_constraintBottom_toBottomOf="@+id/dailyMaxTv" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/dividerView3"
                android:layout_width="@dimen/_1sdp"
                android:layout_height="0dp"
                android:layout_marginVertical="@dimen/_1sdp"
                android:background="@drawable/divider_dash_line_vertical"
                android:layerType="software"
                app:layout_constraintTop_toTopOf="@+id/dailyMinTv"
                app:layout_constraintEnd_toEndOf="@+id/dailyMinTv"
                app:layout_constraintBottom_toBottomOf="@+id/dailyMaxTv" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/dividerView4"
                android:layout_width="0dp"
                android:layout_height="@dimen/_2sdp"
                android:layout_marginHorizontal="@dimen/margin_2"
                android:background="@drawable/divider_dash_line"
                android:layerType="software"
                app:layout_constraintEnd_toEndOf="@+id/dailyMinTv"
                app:layout_constraintStart_toStartOf="@+id/dayTv"
                app:layout_constraintTop_toTopOf="@+id/dailyMinTv" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/dividerView5"
                android:layout_width="0dp"
                android:layout_height="@dimen/_2sdp"
                android:layout_marginHorizontal="@dimen/margin_2"
                android:background="@drawable/divider_dash_line"
                android:layerType="software"
                app:layout_constraintEnd_toEndOf="@+id/dailyMinTv"
                app:layout_constraintStart_toStartOf="@+id/dayTv"
                app:layout_constraintBottom_toBottomOf="@+id/dailyMaxTv" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/dividerView6"
                android:layout_width="@dimen/_1sdp"
                android:layout_height="0dp"
                android:layout_marginEnd="-2dp"
                android:layout_marginVertical="@dimen/_1sdp"
                android:background="@drawable/divider_dash_line_vertical"
                android:layerType="software"
                app:layout_constraintTop_toTopOf="@+id/dailyMinTv"
                app:layout_constraintEnd_toEndOf="@+id/dayTv"
                app:layout_constraintBottom_toBottomOf="@+id/dailyMaxTv" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/dividerView7"
                android:layout_width="@dimen/_1sdp"
                android:layout_height="0dp"
                android:layout_marginVertical="@dimen/_1sdp"
                android:background="@drawable/divider_dash_line_vertical"
                android:layerType="software"
                app:layout_constraintTop_toTopOf="@+id/dailyMinTv"
                app:layout_constraintStart_toStartOf="@+id/dayTv"
                app:layout_constraintBottom_toBottomOf="@+id/dailyMaxTv" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dailyBodyCl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/dailyHeaderCl"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.tasnimulhasan.designsystem.CustomBoldTv
                android:id="@+id/dailyHumidityTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingVertical="@dimen/padding_8"
                android:includeFontPadding="false"
                android:paddingHorizontal="@dimen/padding_4"
                android:textColor="@color/textColor"
                android:textSize="@dimen/small_text_size"
                tools:text="Humidity\n 25.05째"
                app:layout_constraintEnd_toStartOf="@+id/dailyRainTv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.tasnimulhasan.designsystem.CustomBoldTv
                android:id="@+id/dailyRainTv"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingHorizontal="@dimen/padding_4"
                android:textColor="@color/textColor"
                android:textSize="@dimen/small_text_size"
                tools:text="Rain\n25.0째C"
                app:layout_constraintStart_toEndOf="@id/dailyHumidityTv"
                app:layout_constraintEnd_toStartOf="@+id/dailyUviTv"
                app:layout_constraintTop_toTopOf="@id/dailyHumidityTv"
                app:layout_constraintBottom_toBottomOf="@id/dailyHumidityTv"/>

            <com.tasnimulhasan.designsystem.CustomBoldTv
                android:id="@+id/dailyUviTv"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingHorizontal="@dimen/padding_4"
                android:textColor="@color/textColor"
                android:textSize="@dimen/small_text_size"
                tools:text="UVI\n25.56"
                app:layout_constraintStart_toEndOf="@+id/dailyRainTv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/dailyHumidityTv"
                app:layout_constraintBottom_toBottomOf="@id/dailyHumidityTv"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/dividerView8"
                android:layout_width="@dimen/_1sdp"
                android:layout_height="0dp"
                android:layout_marginEnd="-2dp"
                android:background="@drawable/divider_dash_line_vertical"
                android:layerType="software"
                app:layout_constraintTop_toTopOf="@+id/dailyHumidityTv"
                app:layout_constraintEnd_toEndOf="@+id/dailyHumidityTv"
                app:layout_constraintBottom_toBottomOf="@+id/dailyHumidityTv" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/dividerView9"
                android:layout_width="@dimen/_1sdp"
                android:layout_height="0dp"
                android:layout_marginEnd="-2dp"
                android:background="@drawable/divider_dash_line_vertical"
                android:layerType="software"
                app:layout_constraintTop_toTopOf="@+id/dailyHumidityTv"
                app:layout_constraintEnd_toEndOf="@+id/dailyRainTv"
                app:layout_constraintBottom_toBottomOf="@+id/dailyHumidityTv" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/dividerView10"
                android:layout_width="0dp"
                android:layout_height="@dimen/_2sdp"
                android:background="@drawable/divider_dash_line"
                android:layerType="software"
                app:layout_constraintEnd_toEndOf="@+id/dailyUviTv"
                app:layout_constraintStart_toStartOf="@+id/dailyHumidityTv"
                app:layout_constraintBottom_toBottomOf="@+id/dailyHumidityTv" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/dividerView11"
                android:layout_width="@dimen/_1sdp"
                android:layout_height="0dp"
                android:layout_marginVertical="@dimen/_1sdp"
                android:background="@drawable/divider_dash_line_vertical"
                android:layerType="software"
                app:layout_constraintTop_toTopOf="@+id/dailyHumidityTv"
                app:layout_constraintStart_toStartOf="@+id/dailyHumidityTv"
                app:layout_constraintBottom_toBottomOf="@+id/dailyHumidityTv" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/dividerView12"
                android:layout_width="@dimen/_1sdp"
                android:layout_height="0dp"
                android:layout_marginVertical="@dimen/_1sdp"
                android:background="@drawable/divider_dash_line_vertical"
                android:layerType="software"
                app:layout_constraintTop_toTopOf="@+id/dailyHumidityTv"
                app:layout_constraintEnd_toEndOf="@+id/dailyUviTv"
                app:layout_constraintBottom_toBottomOf="@+id/dailyHumidityTv" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/sunriseIv"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginStart="@dimen/margin_8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dividerView10"
                android:src="@drawable/ic_sunrise" />

            <com.tasnimulhasan.designsystem.CustomMediumTV
                android:id="@+id/sunriseTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_2"
                android:gravity="start"
                android:includeFontPadding="false"
                android:textColor="@color/subTextColor"
                android:textSize="@dimen/small_text_size"
                app:layout_constraintTop_toBottomOf="@+id/sunriseIv"
                app:layout_constraintStart_toStartOf="@+id/sunriseIv"
                android:text="@string/label_sunrise" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/sunsetIv"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginEnd="@dimen/margin_8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dividerView10"
                android:src="@drawable/ic_sunset" />

            <com.tasnimulhasan.designsystem.CustomMediumTV
                android:id="@+id/sunsetTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_2"
                android:gravity="end"
                android:includeFontPadding="false"
                android:textColor="@color/subTextColor"
                android:textSize="@dimen/small_text_size"
                app:layout_constraintTop_toBottomOf="@+id/sunsetIv"
                app:layout_constraintEnd_toEndOf="@+id/sunsetIv"
                android:text="@string/label_sunset" />

            <com.tasnimulhasan.designsystem.CustomTV
                android:id="@+id/sunriseValueTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_4"
                android:gravity="start"
                android:includeFontPadding="false"
                android:textColor="@color/textColor"
                android:textSize="@dimen/small_text_size"
                app:layout_constraintStart_toEndOf="@id/sunriseTv"
                app:layout_constraintTop_toTopOf="@id/sunriseTv"
                app:layout_constraintBottom_toBottomOf="@id/sunriseTv"
                tools:text="05:15 am" />

            <com.tasnimulhasan.designsystem.CustomTV
                android:id="@+id/sunsetValueTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_4"
                android:gravity="start"
                android:includeFontPadding="false"
                android:textColor="@color/textColor"
                android:textSize="@dimen/small_text_size"
                app:layout_constraintEnd_toStartOf="@id/sunsetTv"
                app:layout_constraintTop_toTopOf="@id/sunsetTv"
                app:layout_constraintBottom_toBottomOf="@id/sunsetTv"
                tools:text="06:35 pm" />

            <ProgressBar
                android:id="@+id/sunRiseSetPb"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_20"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:progressDrawable="@drawable/sun_progress_bar"
                tools:progress="75"
                app:layout_constraintTop_toTopOf="@id/sunriseIv"
                app:layout_constraintBottom_toBottomOf="@id/sunriseIv"
                app:layout_constraintStart_toEndOf="@id/sunriseIv"
                app:layout_constraintEnd_toStartOf="@+id/sunsetIv"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/dividerView13"
                android:layout_width="0dp"
                android:layout_height="@dimen/_2sdp"
                android:layout_marginTop="12dp"
                android:background="@drawable/divider_dash_line"
                android:layerType="software"
                app:layout_constraintEnd_toEndOf="@+id/dailyUviTv"
                app:layout_constraintHorizontal_bias="0.583"
                app:layout_constraintStart_toStartOf="@+id/dailyHumidityTv"
                app:layout_constraintTop_toBottomOf="@+id/sunriseTv" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/dividerView14"
                android:layout_width="@dimen/_1sdp"
                android:layout_height="0dp"
                android:layout_marginVertical="@dimen/_1sdp"
                android:background="@drawable/divider_dash_line_vertical"
                android:layerType="software"
                app:layout_constraintTop_toTopOf="@+id/dividerView10"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/dividerView13" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/dividerView15"
                android:layout_width="@dimen/_1sdp"
                android:layout_height="0dp"
                android:layout_marginVertical="@dimen/_1sdp"
                android:background="@drawable/divider_dash_line_vertical"
                android:layerType="software"
                app:layout_constraintTop_toTopOf="@+id/dividerView10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/dividerView13" />

            <com.tasnimulhasan.designsystem.CustomMediumTV
                android:id="@+id/dailySummaryTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingHorizontal="@dimen/padding_8"
                android:paddingVertical="@dimen/padding_5"
                android:textColor="@color/subTextColor"
                android:textSize="@dimen/regular_text_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dividerView13"
                tools:text="Demo description for the day. Demo description for the day." />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/dividerView16"
                android:layout_width="0dp"
                android:layout_height="@dimen/_2sdp"
                android:background="@drawable/divider_dash_line"
                android:layerType="software"
                app:layout_constraintEnd_toEndOf="@+id/dailyUviTv"
                app:layout_constraintHorizontal_bias="0.583"
                app:layout_constraintStart_toStartOf="@+id/dailyHumidityTv"
                app:layout_constraintTop_toBottomOf="@+id/dailySummaryTv" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/dividerView17"
                android:layout_width="@dimen/_1sdp"
                android:layout_height="0dp"
                android:layout_marginVertical="@dimen/_1sdp"
                android:background="@drawable/divider_dash_line_vertical"
                android:layerType="software"
                app:layout_constraintTop_toTopOf="@+id/dividerView13"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/dividerView16" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/dividerView18"
                android:layout_width="@dimen/_1sdp"
                android:layout_height="0dp"
                android:layout_marginVertical="@dimen/_1sdp"
                android:background="@drawable/divider_dash_line_vertical"
                android:layerType="software"
                app:layout_constraintTop_toTopOf="@+id/dividerView13"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/dividerView16" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>