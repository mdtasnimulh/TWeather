<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_4"
    app:strokeWidth="0.5dp"
    app:strokeColor="@color/colorPrimary"
    app:cardElevation="@dimen/_2sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dailyCardCl"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_115sdp"
        android:paddingVertical="@dimen/padding_5"
        android:paddingHorizontal="@dimen/padding_2">

        <com.tasnimulhasan.designsystem.CustomMediumTV
            android:id="@+id/hourlyTimeTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_4"
            tools:text="11 AM"
            android:textSize="@dimen/regular_text_size"
            android:textColor="@color/subTextColor"
            android:gravity="center"
            android:includeFontPadding="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/hourlyIconIv"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            app:layout_constraintBottom_toTopOf="@+id/hourlyTempTv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hourlyTimeTv"
            tools:src="@drawable/ic_clear_sky_day" />

        <com.tasnimulhasan.designsystem.CustomBoldTv
            android:id="@+id/hourlyTempTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_5"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingHorizontal="@dimen/padding_4"
            android:textColor="@color/textColor"
            android:textSize="@dimen/regular_text_size"
            app:layout_constraintBottom_toTopOf="@+id/hourlyConditionTv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="30Â°C" />

        <com.tasnimulhasan.designsystem.CustomMediumTV
            android:id="@+id/hourlyConditionTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_4"
            android:background="@drawable/condition_bg"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingVertical="@dimen/padding_2"
            android:paddingHorizontal="@dimen/padding_4"
            android:textColor="@color/subTextColor"
            android:textSize="@dimen/small_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Haze" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>