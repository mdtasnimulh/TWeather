<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_2"
    android:layout_marginBottom="@dimen/margin_12"
    app:cardElevation="@dimen/_3sdp"
    app:cardCornerRadius="@dimen/_15sdp"
    app:strokeWidth="0dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/itemCityCl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.tasnimulhasan.designsystem.CustomTV
            android:id="@+id/cityTimeTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_2"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:textColor="@color/child_text_color"
            android:textSize="@dimen/small_text_size"
            app:layout_constraintBottom_toTopOf="@+id/cityNameTv"
            app:layout_constraintEnd_toEndOf="@+id/cityNameTv"
            app:layout_constraintStart_toStartOf="@+id/cityNameTv"
            tools:text="00:00 PM" />

        <com.tasnimulhasan.designsystem.CustomSemiBoldTV
            android:id="@+id/cityNameTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/subTextColor"
            android:textSize="@dimen/regular_text_size"
            android:includeFontPadding="false"
            android:layout_marginHorizontal="@dimen/margin_4"
            app:layout_constraintBottom_toBottomOf="@+id/cityTempTv"
            app:layout_constraintEnd_toStartOf="@+id/cityTempTv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cityTempTv"
            tools:text="Dhaka" />

        <com.tasnimulhasan.designsystem.CustomTV
            android:id="@+id/cityConditionTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_2"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:textColor="@color/subTextColor"
            android:textSize="@dimen/small_text_size"
            app:layout_constraintEnd_toEndOf="@+id/cityNameTv"
            app:layout_constraintStart_toStartOf="@+id/cityNameTv"
            app:layout_constraintTop_toBottomOf="@+id/cityNameTv"
            tools:text="Clear Sky" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/cityIconIv"
            android:layout_width="0dp"
            android:layout_height="@dimen/_100sdp"
            android:background="@color/colorPrimaryDark"
            android:padding="@dimen/padding_8"
            app:layout_constraintWidth_percent="0.33"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:src="@drawable/ic_stormy_weather"/>

        <com.tasnimulhasan.designsystem.CustomBoldTv
            android:id="@+id/cityTempTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/textColor"
            android:textSize="@dimen/_20ssp"
            android:includeFontPadding="false"
            android:layout_marginEnd="@dimen/margin_5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cityIconIv"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="00.0Â°C" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>