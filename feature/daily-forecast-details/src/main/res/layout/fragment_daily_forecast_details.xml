<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color_white_blur">

    <include
        android:id="@+id/toolbarIncl"
        layout="@layout/common_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/featureNsv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarIncl">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/featureUi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/padding_30">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/dayDateTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_12"
                android:layout_marginTop="@dimen/margin_12"
                android:includeFontPadding="false"
                android:textColor="@color/subTextColor"
                android:textSize="@dimen/_15ssp"
                app:fontFamily="@font/poppins_semibold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Wednesday, 05 Sep 2024" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/temperatureTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_15"
                android:includeFontPadding="false"
                android:text="Temperature"
                android:textColor="@color/textColor"
                android:textSize="@dimen/_12ssp"
                app:fontFamily="@font/poppins_medium"
                app:layout_constraintStart_toStartOf="@id/dayDateTv"
                app:layout_constraintTop_toBottomOf="@id/dayDateTv" />

            <LinearLayout
                android:id="@+id/temperatureDayNightLl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_8"
                android:orientation="horizontal"
                android:weightSum="2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/temperatureTv">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tempDayValueTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    tools:text="Day: 30°C"
                    android:textColor="@color/subTextColor"
                    android:textSize="@dimen/_12ssp"
                    app:fontFamily="@font/poppins_medium" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tempNightValueTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    tools:text="Night: 30°C"
                    android:textColor="@color/subTextColor"
                    android:textSize="@dimen/_12ssp"
                    app:fontFamily="@font/poppins_medium" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/temperatureEveMornLl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_5"
                android:orientation="horizontal"
                android:weightSum="2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/temperatureDayNightLl">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tempMornValueTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    tools:text="Morning: 30°C"
                    android:textColor="@color/subTextColor"
                    android:textSize="@dimen/_12ssp"
                    app:fontFamily="@font/poppins_medium" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tempEveValueTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    tools:text="Evening: 30°C"
                    android:textColor="@color/subTextColor"
                    android:textSize="@dimen/_12ssp"
                    app:fontFamily="@font/poppins_medium" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/temperatureMinMaxLl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_5"
                android:orientation="horizontal"
                android:weightSum="2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/temperatureEveMornLl">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tempMinValueTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    tools:text="Min: 30°C"
                    android:textColor="@color/subTextColor"
                    android:textSize="@dimen/_12ssp"
                    app:fontFamily="@font/poppins_medium" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tempMaxValueTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    tools:text="Max: 30°C"
                    android:textColor="@color/subTextColor"
                    android:textSize="@dimen/_12ssp"
                    app:fontFamily="@font/poppins_medium" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/feelsLikeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_15"
                android:includeFontPadding="false"
                android:text="Feels Like"
                android:textColor="@color/textColor"
                android:textSize="@dimen/_12ssp"
                app:fontFamily="@font/poppins_medium"
                app:layout_constraintStart_toStartOf="@id/dayDateTv"
                app:layout_constraintTop_toBottomOf="@id/temperatureMinMaxLl" />

            <LinearLayout
                android:id="@+id/feelsLikeDayNightLl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_8"
                android:orientation="horizontal"
                android:weightSum="2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/feelsLikeTv">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/feelsLikeDayValueTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    tools:text="Day: 30°C"
                    android:textColor="@color/subTextColor"
                    android:textSize="@dimen/_12ssp"
                    app:fontFamily="@font/poppins_medium" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/feelsLikeNightValueTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    tools:text="Night: 30°C"
                    android:textColor="@color/subTextColor"
                    android:textSize="@dimen/_12ssp"
                    app:fontFamily="@font/poppins_medium" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/feelsLikeEveMornLl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_5"
                android:orientation="horizontal"
                android:weightSum="2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/feelsLikeDayNightLl">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/feelsLikeMornValueTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    tools:text="Morning: 30°C"
                    android:textColor="@color/subTextColor"
                    android:textSize="@dimen/_12ssp"
                    app:fontFamily="@font/poppins_medium" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/feelsLikeEveValueTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    tools:text="Evening: 30°C"
                    android:textColor="@color/subTextColor"
                    android:textSize="@dimen/_12ssp"
                    app:fontFamily="@font/poppins_medium" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/othersTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_15"
                android:includeFontPadding="false"
                android:text="Other\'s"
                android:textColor="@color/textColor"
                android:textSize="@dimen/_12ssp"
                app:fontFamily="@font/poppins_medium"
                app:layout_constraintStart_toStartOf="@id/dayDateTv"
                app:layout_constraintTop_toBottomOf="@id/feelsLikeEveMornLl" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pressureCl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_6"
                android:layout_marginStart="@dimen/margin_15"
                android:layout_marginTop="@dimen/margin_8"
                app:layout_constraintEnd_toStartOf="@id/humidityCl"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/othersTv">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/pressureConditionIv"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/margin_5"
                    android:src="@drawable/air_pressure"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/pressureTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_8"
                    android:layout_marginTop="@dimen/margin_5"
                    android:layout_marginEnd="@dimen/margin_5"
                    android:includeFontPadding="false"
                    android:text="Pressure"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/_13ssp"
                    app:fontFamily="@font/poppins"
                    app:layout_constraintBottom_toTopOf="@id/pressureValueTv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/pressureConditionIv"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/pressureValueTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_4"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:includeFontPadding="false"
                    android:text="1000 pHb"
                    android:textColor="@color/subTextColor"
                    android:textSize="@dimen/_12ssp"
                    app:fontFamily="@font/poppins"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/pressureTv"
                    app:layout_constraintStart_toStartOf="@id/pressureTv"
                    app:layout_constraintTop_toBottomOf="@id/pressureTv" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/humidityCl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_15"
                android:layout_marginStart="@dimen/_6sdp"
                app:layout_constraintStart_toEndOf="@id/pressureCl"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/pressureCl"
                app:layout_constraintBottom_toBottomOf="@id/pressureCl">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/humidityConditionIv"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/margin_5"
                    android:src="@drawable/current_humidity"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/humidityTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_8"
                    android:layout_marginTop="@dimen/margin_5"
                    android:layout_marginEnd="@dimen/margin_5"
                    android:includeFontPadding="false"
                    android:text="Humidity"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/_13ssp"
                    app:fontFamily="@font/poppins"
                    app:layout_constraintBottom_toTopOf="@id/humidityValueTv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/humidityConditionIv"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/humidityValueTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_4"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:includeFontPadding="false"
                    android:text="70.35%"
                    android:textColor="@color/subTextColor"
                    android:textSize="@dimen/_12ssp"
                    app:fontFamily="@font/poppins"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/humidityTv"
                    app:layout_constraintStart_toStartOf="@id/humidityTv"
                    app:layout_constraintTop_toBottomOf="@id/humidityTv" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/windCl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_15"
                android:layout_marginTop="@dimen/margin_6"
                android:layout_marginEnd="@dimen/margin_6"
                app:layout_constraintEnd_toStartOf="@id/rainCl"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pressureCl">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/windConditionIv"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/margin_5"
                    android:src="@drawable/ic_high_wind"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/windTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_8"
                    android:layout_marginTop="@dimen/margin_5"
                    android:layout_marginEnd="@dimen/margin_5"
                    android:includeFontPadding="false"
                    android:text="Wind"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/_13ssp"
                    app:fontFamily="@font/poppins"
                    app:layout_constraintBottom_toTopOf="@id/windValueTv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/windConditionIv"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/windValueTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_4"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:includeFontPadding="false"
                    android:text="12 km/h"
                    android:textColor="@color/subTextColor"
                    android:textSize="@dimen/_12ssp"
                    app:fontFamily="@font/poppins"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/windTv"
                    app:layout_constraintStart_toStartOf="@id/windTv"
                    app:layout_constraintTop_toBottomOf="@id/windTv" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/rainCl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_6"
                app:layout_constraintStart_toEndOf="@id/windCl"
                android:layout_marginEnd="@dimen/margin_15"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/windCl"
                app:layout_constraintTop_toTopOf="@id/windCl">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/rainConditionIv"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/margin_5"
                    android:src="@drawable/rain"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/rainTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_8"
                    android:layout_marginTop="@dimen/margin_5"
                    android:layout_marginEnd="@dimen/margin_5"
                    android:includeFontPadding="false"
                    android:text="Rain"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/_13ssp"
                    app:fontFamily="@font/poppins"
                    app:layout_constraintBottom_toTopOf="@id/rainValueTv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/rainConditionIv"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/rainValueTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_4"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:includeFontPadding="false"
                    android:text="41%"
                    android:textColor="@color/subTextColor"
                    android:textSize="@dimen/_12ssp"
                    app:fontFamily="@font/poppins"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/rainTv"
                    app:layout_constraintStart_toStartOf="@id/rainTv"
                    app:layout_constraintTop_toBottomOf="@id/rainTv" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cloudsCl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_15"
                android:layout_marginTop="@dimen/margin_6"
                app:layout_constraintEnd_toEndOf="@id/windCl"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/windCl">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/cloudsConditionIv"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/margin_5"
                    android:src="@drawable/ic_overcast_cloud"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/cloudsTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_8"
                    android:layout_marginTop="@dimen/margin_5"
                    android:layout_marginEnd="@dimen/margin_5"
                    android:includeFontPadding="false"
                    android:text="Clouds"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/_13ssp"
                    app:fontFamily="@font/poppins"
                    app:layout_constraintBottom_toTopOf="@id/cloudsValueTv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/cloudsConditionIv"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/cloudsValueTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_4"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:includeFontPadding="false"
                    android:text="70%"
                    android:textColor="@color/subTextColor"
                    android:textSize="@dimen/_12ssp"
                    app:fontFamily="@font/poppins"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/cloudsTv"
                    app:layout_constraintStart_toStartOf="@id/cloudsTv"
                    app:layout_constraintTop_toBottomOf="@id/cloudsTv" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <include
                android:id="@+id/sunriseSunsetIncl"
                layout="@layout/include_sunrise_sunset_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_15"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cloudsCl" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>